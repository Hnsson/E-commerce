<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <link rel="stylesheet" href="index.css">
    
    <title>Document</title>
</head>
<body>
    <div class="cart">
        <a href="/cart">Cart: {{cart_length}}</a>
    </div>
    <div class="main">
        <h1>Octane powered<br>E-commerce shop!</h1>
    </div>
    <div class="products">
        {{#each products}}
            <div class="product" style="cursor:pointer;" onclick="window.location.href = 'product/{{id}}'">
                <div class="image">
                    <img src={{src}}>
                </div>
                <div class="title">
                    <h1>{{name}}</h1>
                </div>
                <div class="price">
                    <p>{{price}} :-</p>
                </div>
            </div>
        {{/each}}
    </div>
</html>